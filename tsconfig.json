{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["@types/styled-components-react-native"],
    "paths": {
      "@redux/*": ["./src/redux/*"],
      "@screens/*": ["./src/screens/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"]
    }
  }
}
